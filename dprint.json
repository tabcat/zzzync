{
	"typescript": {},
	"markdown": {},
	"biome": {
		"lineWidth": 80,
		"indentWidth": 2,
		"indentStyle": "space"
	},
	"exec": {
		"cwd": "${configDir}",
		"commands": [
			{
				"command": "npx biome check . --write",
				"exts": ["ts", "json"]
			}
		]
	},
	"includes": [
		"src/**.ts",
		"test/**.ts",
		"readme.md",
		"spec.md"
	],
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.95.15.wasm",
		"https://plugins.dprint.dev/markdown-0.20.0.wasm",
		"https://plugins.dprint.dev/biome-0.11.13.wasm",
		"https://plugins.dprint.dev/json-0.21.1.wasm"
	]
}
