{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": false
  },
  "json": {
    "assist": {
      "enabled": false
    }
  },
  "assist": {
    "enabled": true,
    "includes": ["src/**/*.ts", "test/**/*.ts"],
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    }
  }
}
