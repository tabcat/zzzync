{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"json": {
		"assist": {
			"enabled": false
		}
	},
	"formatter": {
		"enabled": true,
		"includes": ["src/**/*.ts", "test/**/*.ts"],
		"lineWidth": 80,
		"indentWidth": 2,
		"formatWithErrors": true
	},
	"linter": {
		"enabled": true,
		"includes": ["src/**/*.ts", "test/**/*.ts"],
		"rules": {
			"recommended": true
		}
	},
	"assist": {
		"enabled": true,
		"includes": ["src/**/*.ts", "test/**/*.ts"],
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		}
	}
}
